{
    "name": "Twitter Extension",
    "description": "Create a tweet without enter to twitter page",
    "version": "1.0",
    "manifest_version": 3,
    "icons": {
        "16": "/images/twitter_16.png",
        "32": "/images/twitter_32.png",
        "48": "/images/twitter_48.png",
        "128": "/images/twitter_128.png"
      },
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
        "https://bistek-extensions.herokuapp.com/"
    ],
    "action": {
        "default_popup": "views/popup/popup.html",
        "default_icon": {
            "16": "/images/twitter_16.png",
            "32": "/images/twitter_32.png",
            "48": "/images/twitter_48.png",
            "128": "/images/twitter_128.png"
          }
    }
}