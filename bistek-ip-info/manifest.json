{
    "name": "Twitter Extension",
    "description": "Create a tweet without enter to twitter page",
    "version": "1.0",
    "manifest_version": 3,
    "icons": {
        "16": "/images/ip_icon_16.png",
        "32": "/images/ip_icon_32.png",
        "48": "/images/ip_icon_48.png",
        "128": "/images/ip_icon_128.png"
      },
    "background": {
        "service_worker": "background.js"
    },
    
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "tabs"
    ],
    "action": {
        "default_popup": "views/popup/popup.html",
        "default_icon": {
            "16": "/images/ip_icon_16.png",
            "32": "/images/ip_icon_32.png",
            "48": "/images/ip_icon_48.png",
            "128": "/images/ip_icon_128.png"
          }
    }
}